<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#335058"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:orientation="vertical">
            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_back"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ic_arrow_back"/>
            <TextView
                android:id="@+id/tv_Title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Reset your password?"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="#335058"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_Describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vui lòng nhập mật khẩu mới và xác nhận"
                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:gravity="center"/>
            <TextView
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_baseline_train"
                android:layout_marginLeft="150dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#335058"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="40dp"
                android:hint="Mật khẩu"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"/>

            <Button
                android:id="@+id/btn_show_pass"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_marginRight="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_baseline_remove_red_eye_24"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginBottom="75dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_Confirm_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="40dp"
                android:hint="Xác nhận mật khẩu"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"/>

            <Button
                android:id="@+id/btn_show_confirm"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_marginRight="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_baseline_remove_red_eye_24"/>
        </LinearLayout>
        <Button
            android:id="@+id/button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="300dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/ic_arrow_right_circle_icon"/>
    </LinearLayout>
</LinearLayout>