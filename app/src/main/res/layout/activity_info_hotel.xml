<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hotel.InfoHotel">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#335058"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btn_back3"
                android:layout_width="180px"
                android:layout_height="130px"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_yellow_arrow_back"
                android:contentDescription="@string/gcm_defaultSenderId"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_baseline_star_24" />

            <View
                android:layout_width="1dp"
                android:layout_height="100px"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20px"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/inter_bold"
                android:text="rate"
                android:textColor="@color/white"
                android:textSize="70px" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_hotel"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:adjustViewBounds="false"
            android:background="@drawable/radius_hotel"
            android:layout_marginTop="30px"
            android:layout_marginBottom="60px"
            android:scaleType="fitCenter"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name"
            android:text="Name"
            android:fontFamily="@font/ubuntu_bold"
            android:textSize="35dp"
            android:layout_marginLeft="80px"
            android:layout_marginBottom="15px"
            android:textColor="#DEC854">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="120px"
            android:layout_marginBottom="30px">
            <TextView
                android:layout_width="80px"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_location_on_24"></TextView>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:fontFamily="@font/ubuntu"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="address"
                android:layout_marginTop="5px"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="120px"
            android:layout_marginBottom="60px">
            <TextView
                android:layout_width="80px"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_email_24"></TextView>
            <TextView
                android:id="@+id/tv_gmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:fontFamily="@font/ubuntu"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="email"
                android:layout_marginTop="5px"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="80px">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Ngày đặt"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/inter_medium"
                android:hint=""
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="10px"/>

            <Button
                android:id="@+id/btn_time"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/ic_baseline_calendar_month_black_24" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"
        android:layout_marginBottom="80px">
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Mô tả"
            android:layout_marginBottom="40px"/>

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:lineSpacingExtra="8sp"
            android:text="Mô tả"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px">
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Đặt phòng"
            android:layout_marginBottom="40px"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="50px"></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>
</ScrollView>