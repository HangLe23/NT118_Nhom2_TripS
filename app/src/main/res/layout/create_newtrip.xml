<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="#335058"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:orientation="vertical">
            <!--android:background="@drawable/border"android:background="#DEC854"-->

            <Button
                android:id="@+id/btn_back"
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/tv_Title"
                android:layout_width="346dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/karla_bold"
                android:text="Welcome Back!"
                android:textAlignment="viewStart"
                android:textColor="#335058"
                android:textSize="35dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_Describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/istok_web"
                android:text="Tạo một chuyến đi mới ngay bây giờ"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_baseline_train" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#335058"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:translationY="80px">

            <EditText
                android:id="@+id/et_place"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="80px"
                android:layout_weight="2"
                android:fontFamily="@font/inter_medium"
                android:hint="Nơi bạn muốn đi đến?"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/btn_place"
                android:layout_width="32dp"
                android:layout_height="50dp"
                android:layout_marginRight="50dp"

                android:layout_weight="0"
                android:backgroundTint="#FFEB3B"
                android:translationY="100px">

            </Spinner>
            <!--<Button
                android:id="@+id/btn_place"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="45dp"
                android:layout_weight="1"
                android:background="@drawable/ic_baseline_expand_more_24"
                android:translationY="70px" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="80px"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="80px"
                android:layout_weight="2"
                android:fontFamily="@font/inter_medium"
                android:hint="Thời gian"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_time"
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:background="@drawable/ic_baseline_calendar_month_24"
                android:translationY="65px" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_name_trip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="80px"
                android:layout_marginRight="40dp"
                android:layout_weight="0"
                android:fontFamily="@font/inter_medium"
                android:hint="Tên chuyến đi"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_Enter"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20px"
            android:layout_weight="0"
            android:layout_marginLeft="300dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/ic_arrow_right_circle_icon"/>
    </LinearLayout>
</LinearLayout>