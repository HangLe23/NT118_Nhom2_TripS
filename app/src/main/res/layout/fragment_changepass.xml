<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#335058"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="50dp"
        android:id="@+id/border"
        android:background="@drawable/border"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_Title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Change Password"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="#335058"
            android:textStyle="bold"/>

    </LinearLayout>

    <EditText
        android:id="@+id/et_oldpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/border"
        android:hint="Nhập mật khẩu cũ"
        android:password="true"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginTop="75dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"/>
    <ImageButton
        android:id="@+id/btn_show_oldpass"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#335058"
        app:layout_constraintTop_toBottomOf="@id/border"
        android:layout_marginTop="75dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"/>

    <EditText
        android:id="@+id/et_newpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_oldpassword"
        android:hint="Nhập mật khẩu mới"
        android:password="true"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp" />
    <ImageButton
        android:id="@+id/btn_show_newpass"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#335058"
        app:layout_constraintTop_toBottomOf="@id/et_oldpassword"
        android:layout_marginTop="45dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"/>

    <EditText
        android:id="@+id/et_confirmpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_newpassword"
        android:hint="Xác nhận mật khẩu"
        android:password="true"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp" />
    <ImageButton
        android:id="@+id/btn_show_confirm"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#335058"
        app:layout_constraintTop_toBottomOf="@id/et_newpassword"
        android:layout_marginTop="45dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"/>


    <Button
        android:id="@+id/btn_changepass"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/ic_arrow_right_circle_icon"/>


</androidx.constraintlayout.widget.ConstraintLayout>